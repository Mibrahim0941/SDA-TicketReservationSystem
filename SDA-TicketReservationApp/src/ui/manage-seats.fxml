<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #F5EFE7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ManageSeatsController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-section">
        <VBox spacing="5">
            <Text fx:id="welcomeTitle" styleClass="dashboard-title" text="ðŸŽ« Seat Management" />
            <Text fx:id="userGreeting" styleClass="dashboard-subtitle" text="Admin Panel - Manage Seats &amp; Pricing" />
        </VBox>
        
        <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <Button fx:id="refreshButton" styleClass="btn-secondary" text="ðŸ”„ Refresh" />
            <Button fx:id="backButton" styleClass="btn-secondary" text="â† Back to Dashboard" />
        </HBox>
    </HBox>

    <!-- Selection Section -->
    <HBox spacing="15" styleClass="form-container">
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="ðŸ“ Select Route" />
            <ComboBox fx:id="routeComboBox" styleClass="combo-box" />
        </VBox>
        
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="ðŸ“… Select Schedule" />
            <ComboBox fx:id="scheduleComboBox" styleClass="combo-box" />
        </VBox>
    </HBox>

    <!-- Seat Type Management Section -->
    <VBox spacing="15" styleClass="seat-type-section">
        <Label styleClass="section-title" text="ðŸ’° Seat Type Management" />
        
        <!-- Seat Type Filter Buttons -->
        <HBox fx:id="seatTypeButtonsContainer" spacing="10" alignment="CENTER">
            <!-- Buttons will be dynamically added -->
        </HBox>
        
        <!-- Current Selection Info -->
        <Label fx:id="seatTypeInfoLabel" text="Select a seat type to view specific seats" 
               styleClass="seat-type-info" />
        
        <!-- Seat Type Percentage Controls -->
        <GridPane hgap="15" vgap="10" styleClass="percentage-grid">
            <columnConstraints>
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
            </columnConstraints>
            
            <!-- Type A -->
            <VBox GridPane.columnIndex="0" spacing="5">
                <Label text="ðŸ”· Type A (Standard)" styleClass="type-label" />
                <TextField fx:id="typeAPercentage" promptText="0.0%" styleClass="percentage-field" />
            </VBox>
            
            <!-- Type B -->
            <VBox GridPane.columnIndex="1" spacing="5">
                <Label text="ðŸ”¶ Type B (Premium)" styleClass="type-label" />
                <TextField fx:id="typeBPercentage" promptText="10.0%" styleClass="percentage-field" />
            </VBox>
            
            <!-- Type C -->
            <VBox GridPane.columnIndex="2" spacing="5">
                <Label text="ðŸ”¸ Type C (Business)" styleClass="type-label" />
                <TextField fx:id="typeCPercentage" promptText="20.0%" styleClass="percentage-field" />
            </VBox>
            
            <!-- Type D -->
            <VBox GridPane.columnIndex="3" spacing="5">
                <Label text="ðŸ’Ž Type D (First Class)" styleClass="type-label" />
                <TextField fx:id="typeDPercentage" promptText="30.0%" styleClass="percentage-field" />
            </VBox>
        </GridPane>
        
        <!-- Action Buttons -->
        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="applyPercentagesButton" styleClass="btn-primary" text="âœ… Apply Percentages" />
            <Button fx:id="generateSeatsButton" styleClass="btn-generate" text="ðŸšŒ Generate Seat Layout" />
        </HBox>
    </VBox>

    <!-- Main Content Area -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Seats Grid -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label styleClass="section-title" text="ðŸšŒ Seat Layout" />
                <Label styleClass="layout-info" text="(Click seats to toggle status)" />
            </HBox>
            <ScrollPane fitToWidth="true" prefHeight="450" styleClass="seats-scroll">
                <content>
                    <GridPane fx:id="seatsGrid" hgap="10" vgap="10" styleClass="seats-grid">
                        <!-- Seats will be dynamically added here -->
                    </GridPane>
                </content>
            </ScrollPane>
        </VBox>

        <!-- Seat Details & Statistics -->
        <VBox spacing="10" prefWidth="350">
            <Label styleClass="section-title" text="ðŸ“Š Seat Information &amp; Statistics" />
            <TextArea fx:id="seatDetailsArea" editable="false" prefHeight="450" styleClass="details-area" />
            
            <!-- Quick Statistics -->
            <GridPane hgap="10" vgap="8" styleClass="quick-stats">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>
                
                <!-- Stats will be dynamically populated -->
            </GridPane>
        </VBox>
    </HBox>

</VBox>