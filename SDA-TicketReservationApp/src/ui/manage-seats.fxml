<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #F5EFE7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ManageSeatsController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-section">
        <VBox spacing="5">
            <Text fx:id="welcomeTitle" styleClass="dashboard-title" text="Manage Seats" />
            <Text fx:id="userGreeting" styleClass="dashboard-subtitle" text="Manage Seats - Admin" />
        </VBox>
        
        <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <Button fx:id="refreshButton" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" styleClass="btn-secondary" text="Back to Dashboard" />
        </HBox>
    </HBox>

    <!-- Selection Section -->
    <HBox spacing="15" styleClass="form-container">
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Select Route" />
            <ComboBox fx:id="routeComboBox" styleClass="combo-box" />
        </VBox>
        
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Select Schedule" />
            <ComboBox fx:id="scheduleComboBox" styleClass="combo-box" />
        </VBox>
    </HBox>

    <!-- Main Content Area -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Seats Grid -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="section-title" text="Seat Layout" />
            <ScrollPane fitToWidth="true" prefHeight="500" style="-fx-background-color: transparent;">
                <content>
                    <GridPane fx:id="seatsGrid" hgap="5" vgap="5" styleClass="seats-grid">
                        <!-- Seats will be dynamically added here -->
                    </GridPane>
                </content>
            </ScrollPane>
        </VBox>

        <!-- Seat Details -->
        <VBox spacing="10" prefWidth="300">
            <Label styleClass="section-title" text="Seat Information" />
            <TextArea fx:id="seatDetailsArea" editable="false" prefHeight="500" styleClass="details-area" />
        </VBox>
    </HBox>

</VBox>