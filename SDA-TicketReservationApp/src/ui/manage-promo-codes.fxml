<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #F5EFE7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ManagePromoCodesController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-section">
        <VBox spacing="5">
            <Text fx:id="welcomeTitle" styleClass="dashboard-title" text="Manage Promo Codes" />
            <Text fx:id="userGreeting" styleClass="dashboard-subtitle" text="Manage Promo Codes - Admin" />
        </VBox>
        
        <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <Button fx:id="refreshButton" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" styleClass="btn-secondary" text="Back to Dashboard" />
        </HBox>
    </HBox>

    <!-- Main Content Area -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Left Side: Form and Table -->
        <VBox spacing="15" HBox.hgrow="ALWAYS">
            <!-- Add Promo Code Form -->
            <VBox spacing="10" styleClass="form-container">
                <Label styleClass="section-title" text="Add New Promo Code" />
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label styleClass="input-label" text="Promo Code" />
                        <TextField fx:id="codeField" styleClass="text-field" promptText="Enter promo code" />
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label styleClass="input-label" text="Discount Percentage" />
                        <TextField fx:id="percentageField" styleClass="text-field" promptText="e.g., 10.0" />
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label styleClass="input-label" text="Valid Until" />
                        <DatePicker fx:id="validityField" styleClass="date-picker" />
                    </VBox>
                    <VBox spacing="5">
                        <Label styleClass="input-label" text="Actions" />
                        <Button fx:id="addPromoButton" styleClass="btn-primary" text="Add Promo Code" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Promo Codes Table -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label styleClass="section-title" text="Promotional Codes" />
                    <Button fx:id="clearButton" styleClass="btn-secondary" text="Clear Selection" />
                    <Button fx:id="toggleStatusButton" styleClass="btn-warning" text="Toggle Status" />
                    <Button fx:id="deletePromoButton" styleClass="btn-danger" text="Delete Selected" />
                </HBox>
                
                <TableView fx:id="promoTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="codeColumn" text="Code" prefWidth="150" />
                        <TableColumn fx:id="percentageColumn" text="Discount" prefWidth="100" />
                        <TableColumn fx:id="validityColumn" text="Valid Until" prefWidth="120" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>

        <!-- Right Side: Details -->
        <VBox spacing="10" prefWidth="300">
            <Label styleClass="section-title" text="Promo Code Details" />
            <TextArea fx:id="promoDetailsArea" editable="false" VBox.vgrow="ALWAYS" styleClass="details-area" />
        </VBox>
    </HBox>

</VBox>