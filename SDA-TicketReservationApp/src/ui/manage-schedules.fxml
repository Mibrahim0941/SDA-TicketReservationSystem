<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #F5EFE7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ManageSchedulesController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-section">
        <VBox spacing="5">
            <Text fx:id="welcomeTitle" styleClass="dashboard-title" text="Manage Schedules" />
            <Text fx:id="userGreeting" styleClass="dashboard-subtitle" text="Manage Schedules - Admin" />
        </VBox>
        
        <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <Button fx:id="refreshButton" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" styleClass="btn-secondary" text="Back to Dashboard" />
        </HBox>
    </HBox>

    <!-- Route Selection -->
    <HBox spacing="15" styleClass="form-container">
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Select Route" />
            <ComboBox fx:id="routeComboBox" prefWidth="400" styleClass="combo-box" />
        </VBox>
    </HBox>

    <!-- Input Form -->
    <HBox spacing="15" styleClass="form-container">
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Date" />
            <DatePicker fx:id="datePicker" styleClass="date-picker" />
        </VBox>
        
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Departure Time (HH:mm)" />
            <TextField fx:id="departureField" promptText="14:30" styleClass="text-field" />
        </VBox>
        
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Arrival Time (HH:mm)" />
            <TextField fx:id="arrivalField" promptText="16:30" styleClass="text-field" />
        </VBox>
        
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Class" />
            <ComboBox fx:id="classComboBox" styleClass="combo-box" />
        </VBox>
    </HBox>

    <!-- Action Buttons -->
    <HBox spacing="15" styleClass="form-container">
        <Button fx:id="addScheduleButton" styleClass="btn-primary" text="Add Schedule" />
        <Button fx:id="updateScheduleButton" styleClass="btn-secondary" text="Update Schedule" />
        <Button fx:id="deleteScheduleButton" styleClass="btn-danger" text="Delete Schedule" />
        <Button fx:id="clearButton" styleClass="btn-secondary" text="Clear" />
    </HBox>

    <!-- Main Content Area -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Schedules Table -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="section-title" text="Schedules List" />
            <TableView fx:id="schedulesTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="scheduleIdColumn" text="Schedule ID" />
                    <TableColumn fx:id="dateColumn" text="Date" />
                    <TableColumn fx:id="departureColumn" text="Departure" />
                    <TableColumn fx:id="arrivalColumn" text="Arrival" />
                    <TableColumn fx:id="classColumn" text="Class" />
                </columns>
            </TableView>
        </VBox>

        <!-- Schedule Details -->
        <VBox spacing="10" prefWidth="350">
            <Label styleClass="section-title" text="Schedule Details" />
            <TextArea fx:id="scheduleDetailsArea" editable="false" prefHeight="400" styleClass="details-area" />
        </VBox>
    </HBox>

</VBox>