<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #F5EFE7;" stylesheets="@../ui/booking-history.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.BookingHistoryController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-section">
        <VBox spacing="5">
            <Text fx:id="pageTitle" styleClass="dashboard-title" text="Booking History" />
            <Text fx:id="userGreeting" styleClass="dashboard-subtitle" text="Hello, User! ðŸ“œ" />
        </VBox>
        
        <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <Button fx:id="refreshButton" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" styleClass="btn-secondary" text="Back to Dashboard" />
        </HBox>
    </HBox>

    <HBox fx:id="filterContainer" alignment="CENTER_LEFT" spacing="15" styleClass="filter-container">
        <Label styleClass="filter-label" text="Filters:" />
        
        <VBox spacing="5">
            <Label styleClass="input-label" text="Status" />
            <ComboBox fx:id="statusFilter" prefWidth="150" styleClass="combo-box" />
        </VBox>
        
        <VBox spacing="5">
            <Label styleClass="input-label" text="Payment" />
            <ComboBox fx:id="paymentFilter" prefWidth="150" styleClass="combo-box" />
        </VBox>
        
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Search" />
            <TextField fx:id="searchField" promptText="Search by ID or City..." styleClass="text-field" />
        </VBox>
    </HBox>

    <ProgressIndicator fx:id="loadingIndicator" visible="false" />

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: #F5EFE7;" vbarPolicy="AS_NEEDED">
        <content>
            <VBox fx:id="bookingsContainer" spacing="15" style="-fx-background-color: #F5EFE7;">
                <padding>
                    <Insets bottom="10" left="5" right="5" top="10" />
                </padding>
                <Text fx:id="noBookingsText" styleClass="no-bookings" text="No bookings found." visible="false" />
            </VBox>
        </content>
    </ScrollPane>

</VBox>