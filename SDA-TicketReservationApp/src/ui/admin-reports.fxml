<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #F5EFE7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminReportsController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-section">
        <VBox spacing="5">
            <Text fx:id="welcomeTitle" styleClass="dashboard-title" text="Reports Dashboard" />
            <Text fx:id="userGreeting" styleClass="dashboard-subtitle" text="Reports Dashboard - Admin" />
        </VBox>
        
        <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <Button fx:id="backButton" styleClass="btn-secondary" text="Back to Dashboard" />
        </HBox>
    </HBox>

    <!-- Report Generation Buttons -->
    <HBox spacing="15" styleClass="form-container">
        <VBox spacing="10" HBox.hgrow="ALWAYS" alignment="CENTER">
            <Label styleClass="section-title" text="Generate Reports" />
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="generateBookingReportButton" styleClass="btn-primary" text="ðŸ“Š Booking Report" />
                <Button fx:id="generateRevenueReportButton" styleClass="btn-primary" text="ðŸ’° Revenue Report" />
            </HBox>
        </VBox>
    </HBox>

    <!-- Report Display Area -->
    <VBox spacing="10" VBox.vgrow="ALWAYS" styleClass="form-container">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label styleClass="section-title" text="Generated Report" />
        </HBox>
        <TextArea fx:id="reportArea" editable="false" VBox.vgrow="ALWAYS" styleClass="report-area" />
    </VBox>

</VBox>