<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ManageRoutesController"
            stylesheets="@manage-routes.css">
    
    <!-- Top Header -->
    <top>
        <VBox styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-content">
                <Button fx:id="backButton" text="Back to Dashboard" styleClass="back-button"/>
                <VBox spacing="2">
                    <Text fx:id="welcomeTitle" text="Manage Routes" styleClass="title"/>
                    <Text fx:id="userGreeting" styleClass="greeting"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="refreshButton" text="Refresh" styleClass="icon-button"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- Center Content -->
    <center>
        <BorderPane styleClass="main-content">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Left: Form -->
            <left>
                <VBox spacing="25" styleClass="form-container">
                    <padding>
                        <Insets top="0" right="20" bottom="0" left="0"/>
                    </padding>
                    
                    <VBox spacing="15" styleClass="form-section">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Text text="Route Information" styleClass="section-title"/>
                        </HBox>
                        
                        <VBox spacing="12">
                            <VBox spacing="5">
                                <Label text="Source City" styleClass="form-label"/>
                                <TextField fx:id="sourceField" promptText="Enter source city" styleClass="modern-field"/>
                                <Text text="e.g., Lahore, Karachi" styleClass="field-hint"/>
                            </VBox>
                            
                            <VBox spacing="5">
                                <Label text="Destination City" styleClass="form-label"/>
                                <TextField fx:id="destinationField" promptText="Enter destination city" styleClass="modern-field"/>
                                <Text text="e.g., Islamabad, Peshawar" styleClass="field-hint"/>
                            </VBox>
                            
                            <VBox spacing="5">
                                <Label text="Base Price (PKR)" styleClass="form-label"/>
                                <TextField fx:id="basePriceField" promptText="Enter base price" styleClass="modern-field"/>
                                <Text text="Must be greater than 0" styleClass="field-hint"/>
                            </VBox>
                        </VBox>
                    </VBox>
                    
                    <!-- Action Buttons -->
                    <VBox spacing="10" styleClass="actions-section">
                        <Button fx:id="addRouteButton" text="Add New Route" styleClass="primary-button" maxWidth="Infinity"/>
                        <Button fx:id="updateRouteButton" text="Update Route" styleClass="secondary-button" maxWidth="Infinity"/>
                        <Button fx:id="deleteRouteButton" text="Delete Route" styleClass="danger-button" maxWidth="Infinity"/>
                        <HBox spacing="10">
                            <Button fx:id="clearButton" text="Clear Form" styleClass="outline-button" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>
                    
                    <!-- Route Details -->
                    <VBox spacing="12" styleClass="details-section">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Text text="Route Details" styleClass="section-title"/>
                        </HBox>
                        <TextArea fx:id="routeDetailsArea" editable="false" wrapText="true" 
                                 styleClass="details-area" prefHeight="180"/>
                    </VBox>
                </VBox>
            </left>
            
            <!-- Center: Routes Table -->
            <center>
                <VBox spacing="20" styleClass="table-section">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Text text="All Routes" styleClass="section-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Text text="Click on a route to view details" styleClass="hint-text"/>
                    </HBox>
                    
                    <TableView fx:id="routesTable" styleClass="modern-table" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="routeIdColumn" text="ROUTE ID" styleClass="table-column"/>
                            <TableColumn fx:id="sourceColumn" text="SOURCE" styleClass="table-column"/>
                            <TableColumn fx:id="destinationColumn" text="DESTINATION" styleClass="table-column"/>
                            <TableColumn fx:id="basePriceColumn" text="BASE PRICE (PKR)" styleClass="table-column"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    
                    <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="table-footer">
                        <Text fx:id="tableCount" text="Showing 0 routes" styleClass="count-text"/>
                    </HBox>
                </VBox>
            </center>
        </BorderPane>
    </center>
</BorderPane>