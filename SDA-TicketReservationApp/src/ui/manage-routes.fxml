<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #F5EFE7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ManageRoutesController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-section">
        <VBox spacing="5">
            <Text fx:id="welcomeTitle" styleClass="dashboard-title" text="Manage Routes" />
            <Text fx:id="userGreeting" styleClass="dashboard-subtitle" text="Manage Routes - Admin" />
        </VBox>
        
        <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <Button fx:id="refreshButton" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" styleClass="btn-secondary" text="Back to Dashboard" />
        </HBox>
    </HBox>

    <!-- Input Form -->
    <HBox spacing="15" styleClass="form-container">
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Source City" />
            <TextField fx:id="sourceField" promptText="Enter source city..." styleClass="text-field" />
        </VBox>
        
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Destination City" />
            <TextField fx:id="destinationField" promptText="Enter destination city..." styleClass="text-field" />
        </VBox>
        
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Base Price (PKR)" />
            <TextField fx:id="basePriceField" promptText="Enter base price..." styleClass="text-field" />
        </VBox>
        
        <VBox spacing="10">
            <Label styleClass="input-label" text="Actions" />
            <HBox spacing="10">
                <Button fx:id="addRouteButton" styleClass="btn-primary" text="Add Route" />
                <Button fx:id="updateRouteButton" styleClass="btn-secondary" text="Update" />
                <Button fx:id="clearButton" styleClass="btn-secondary" text="Clear" />
            </HBox>
        </VBox>
    </HBox>

    <!-- Main Content Area -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Routes Table -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="section-title" text="Routes List" />
            <TableView fx:id="routesTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="routeIdColumn" text="Route ID" />
                    <TableColumn fx:id="sourceColumn" text="Source" />
                    <TableColumn fx:id="destinationColumn" text="Destination" />
                    <TableColumn fx:id="basePriceColumn" text="Base Price" />
                </columns>
            </TableView>
            <Button fx:id="deleteRouteButton" styleClass="btn-danger" text="Delete Selected Route" />
        </VBox>

        <!-- Route Details -->
        <VBox spacing="10" prefWidth="300">
            <Label styleClass="section-title" text="Route Details" />
            <TextArea fx:id="routeDetailsArea" editable="false" prefHeight="400" styleClass="details-area" />
        </VBox>
    </HBox>

</VBox>