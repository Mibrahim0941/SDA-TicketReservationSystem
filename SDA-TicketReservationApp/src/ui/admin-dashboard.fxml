<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AdminDashboardController">
    
    <!-- Top Header -->
    <top>
        <VBox style="-fx-background-color: #ffffff; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10;">
                <!-- Logo placeholder -->
                <Circle radius="20" fill="#0ea5e9"/>
                
                <VBox spacing="2">
                    <Text fx:id="welcomeTitle" text="Admin Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                    <Text fx:id="userGreeting" style="-fx-font-size: 14px; -fx-fill: #64748b;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                
                <Button fx:id="refreshButton" text="Refresh" style="-fx-background-color: #f8fafc; -fx-text-fill: #475569; -fx-border-color: #e2e8f0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12; -fx-cursor: hand;"/>
                <Button fx:id="mainPageButton" text="Home" style="-fx-background-color: #f8fafc; -fx-text-fill: #475569; -fx-border-color: #e2e8f0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12; -fx-cursor: hand;"/>
                <Button fx:id="logoutButton" text="Logout" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- Center Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: #f1f5f9; -fx-border-color: transparent;">
            <VBox spacing="30" style="-fx-padding: 30;">
                
                <!-- Statistics Cards -->
                <HBox spacing="20" alignment="CENTER">
                    <VBox style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: CENTER; -fx-spacing: 10; -fx-pref-width: 150;">
                        <Circle radius="16" fill="#3b82f6"/>
                        <Label fx:id="totalRoutesLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                        <Text text="Total Routes" style="-fx-font-size: 12px; -fx-fill: #64748b;"/>
                    </VBox>
                    
                    <VBox style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: CENTER; -fx-spacing: 10; -fx-pref-width: 150;">
                        <Circle radius="16" fill="#10b981"/>
                        <Label fx:id="activeSchedulesLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                        <Text text="Active Schedules" style="-fx-font-size: 12px; -fx-fill: #64748b;"/>
                    </VBox>
                    
                    <VBox style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: CENTER; -fx-spacing: 10; -fx-pref-width: 150;">
                        <Circle radius="16" fill="#f59e0b"/>
                        <Label fx:id="totalBookingsLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                        <Text text="Total Bookings" style="-fx-font-size: 12px; -fx-fill: #64748b;"/>
                    </VBox>
                    
                    <VBox style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: CENTER; -fx-spacing: 10; -fx-pref-width: 150;">
                        <Circle radius="16" fill="#ef4444"/>
                        <Label fx:id="revenueLabel" text="PKR 0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                        <Text text="Revenue" style="-fx-font-size: 12px; -fx-fill: #64748b;"/>
                    </VBox>
                </HBox>
                
                <!-- Management Cards Grid -->
                <VBox spacing="15">
                    <Text text="Management Options" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                    
                    <GridPane hgap="20" vgap="20">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints percentHeight="50"/>
                            <RowConstraints percentHeight="50"/>
                        </rowConstraints>
                        
                        <!-- Row 1 -->
                        <VBox fx:id="manageRoutesCard" style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: CENTER; -fx-spacing: 10; -fx-cursor: hand;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Circle radius="24" fill="#3b82f6"/>
                            <Text text="Manage Routes" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                            <Text text="Add, update, or delete routes" style="-fx-font-size: 12px; -fx-fill: #64748b; -fx-text-alignment: center;"/>
                        </VBox>
                        
                        <VBox fx:id="manageSchedulesCard" style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: CENTER; -fx-spacing: 10; -fx-cursor: hand;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Circle radius="24" fill="#10b981"/>
                            <Text text="Manage Schedules" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                            <Text text="Create and modify schedules" style="-fx-font-size: 12px; -fx-fill: #64748b; -fx-text-alignment: center;"/>
                        </VBox>
                        
                        <VBox fx:id="managePricingCard" style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: CENTER; -fx-spacing: 10; -fx-cursor: hand;" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <Circle radius="24" fill="#f59e0b"/>
                            <Text text="Pricing Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                            <Text text="Update ticket prices" style="-fx-font-size: 12px; -fx-fill: #64748b; -fx-text-alignment: center;"/>
                        </VBox>
                        
                        <VBox fx:id="manageSeatsCard" style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: CENTER; -fx-spacing: 10; -fx-cursor: hand;" GridPane.columnIndex="3" GridPane.rowIndex="0">
                            <Circle radius="24" fill="#8b5cf6"/>
                            <Text text="Seat Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                            <Text text="Manage seat availability" style="-fx-font-size: 12px; -fx-fill: #64748b; -fx-text-alignment: center;"/>
                        </VBox>
                        
                        <!-- Row 2 -->
                        <VBox fx:id="reportsCard" style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: CENTER; -fx-spacing: 10; -fx-cursor: hand;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Circle radius="24" fill="#ef4444"/>
                            <Text text="Reports" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                            <Text text="View booking statistics" style="-fx-font-size: 12px; -fx-fill: #64748b; -fx-text-alignment: center;"/>
                        </VBox>
                        
                        <VBox fx:id="policiesCard" style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: CENTER; -fx-spacing: 10; -fx-cursor: hand;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Circle radius="24" fill="#06b6d4"/>
                            <Text text="Policies" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                            <Text text="Manage cancellation policies" style="-fx-font-size: 12px; -fx-fill: #64748b; -fx-text-alignment: center;"/>
                        </VBox>
                        
                        <VBox fx:id="promoCodesCard" style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: CENTER; -fx-spacing: 10; -fx-cursor: hand;" GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <Circle radius="24" fill="#84cc16"/>
                            <Text text="Promo Codes" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                            <Text text="Manage promotional codes" style="-fx-font-size: 12px; -fx-fill: #64748b; -fx-text-alignment: center;"/>
                        </VBox>
                        
                        <VBox fx:id="settingsCard" style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: CENTER; -fx-spacing: 10; -fx-cursor: hand;" GridPane.columnIndex="3" GridPane.rowIndex="1">
                            <Circle radius="24" fill="#64748b"/>
                            <Text text="Settings" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                            <Text text="System configuration" style="-fx-font-size: 12px; -fx-fill: #64748b; -fx-text-alignment: center;"/>
                        </VBox>
                    </GridPane>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>