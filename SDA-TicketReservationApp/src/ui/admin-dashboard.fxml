<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #F5EFE7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminDashboardController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-section">
        <VBox spacing="5">
            <Text fx:id="welcomeTitle" styleClass="dashboard-title" text="Admin Dashboard" />
            <Text fx:id="userGreeting" styleClass="dashboard-subtitle" text="Welcome, Administrator! ðŸ‘‹" />
        </VBox>
        
        <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <Button fx:id="refreshButton" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="mainPageButton" styleClass="btn-secondary" text="Main Page" />
            <Button fx:id="logoutButton" styleClass="btn-danger" text="Logout" />
        </HBox>
    </HBox>

    <!-- Statistics Cards -->
    <HBox spacing="15" styleClass="stats-container">
        <VBox spacing="10" styleClass="stat-card" HBox.hgrow="ALWAYS">
            <Label styleClass="stat-label" text="Total Routes" />
            <Label fx:id="totalRoutesLabel" styleClass="stat-value" text="25" />
        </VBox>
        
        <VBox spacing="10" styleClass="stat-card" HBox.hgrow="ALWAYS">
            <Label styleClass="stat-label" text="Active Schedules" />
            <Label fx:id="activeSchedulesLabel" styleClass="stat-value" text="48" />
        </VBox>
        
        <VBox spacing="10" styleClass="stat-card" HBox.hgrow="ALWAYS">
            <Label styleClass="stat-label" text="Total Bookings" />
            <Label fx:id="totalBookingsLabel" styleClass="stat-value" text="1,234" />
        </VBox>
        
        <VBox spacing="10" styleClass="stat-card" HBox.hgrow="ALWAYS">
            <Label styleClass="stat-label" text="Revenue" />
            <Label fx:id="revenueLabel" styleClass="stat-value" text="PKR 45,678" />
        </VBox>
    </HBox>

    <!-- Management Cards Grid -->
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED">
        <content>
            <GridPane hgap="15" vgap="15" style="-fx-background-color: #F5EFE7;">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                </columnConstraints>
                
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS" percentHeight="50" />
                    <RowConstraints vgrow="ALWAYS" percentHeight="50" />
                </rowConstraints>

                <!-- Row 1 -->
                <VBox fx:id="manageRoutesCard" styleClass="management-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label styleClass="card-title" text="ðŸšŒ Routes" />
                    <Label styleClass="card-description" text="Manage bus routes and destinations" wrapText="true" />
                </VBox>

                <VBox fx:id="manageSchedulesCard" styleClass="management-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label styleClass="card-title" text="ðŸ“… Schedules" />
                    <Label styleClass="card-description" text="Manage departure times and schedules" wrapText="true" />
                </VBox>

                <VBox fx:id="managePricingCard" styleClass="management-card" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label styleClass="card-title" text="ðŸ’° Pricing" />
                    <Label styleClass="card-description" text="Set and update ticket prices" wrapText="true" />
                </VBox>

                <VBox fx:id="manageSeatsCard" styleClass="management-card" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <Label styleClass="card-title" text="ðŸ’º Seats" />
                    <Label styleClass="card-description" text="Manage seat availability and layout" wrapText="true" />
                </VBox>

                <!-- Row 2 -->
                <VBox fx:id="reportsCard" styleClass="management-card" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label styleClass="card-title" text="ðŸ“Š Reports" />
                    <Label styleClass="card-description" text="Generate system reports and analytics" wrapText="true" />
                </VBox>

                <VBox fx:id="policiesCard" styleClass="management-card" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label styleClass="card-title" text="ðŸ“‹ Policies" />
                    <Label styleClass="card-description" text="Manage cancellation policies" wrapText="true" />
                </VBox>

                <VBox fx:id="promoCodesCard" styleClass="management-card" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <Label styleClass="card-title" text="ðŸŽ« Promo Codes" />
                    <Label styleClass="card-description" text="Create and manage promotional codes" wrapText="true" />
                </VBox>

                <VBox fx:id="settingsCard" styleClass="management-card" GridPane.columnIndex="3" GridPane.rowIndex="1">
                    <Label styleClass="card-title" text="âš™ï¸ Settings" />
                    <Label styleClass="card-description" text="System configuration and settings" wrapText="true" />
                </VBox>
            </GridPane>
        </content>
    </ScrollPane>

</VBox>