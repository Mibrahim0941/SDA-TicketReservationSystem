<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #F5EFE7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ManagePricingController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-section">
        <VBox spacing="5">
            <Text fx:id="welcomeTitle" styleClass="dashboard-title" text="Manage Pricing" />
            <Text fx:id="userGreeting" styleClass="dashboard-subtitle" text="Manage Pricing - Admin" />
        </VBox>
        
        <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <Button fx:id="refreshButton" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" styleClass="btn-secondary" text="Back to Dashboard" />
        </HBox>
    </HBox>

    <!-- Pricing Actions -->
    <HBox spacing="15" styleClass="form-container">
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Update Individual Price" />
            <HBox spacing="10">
                <TextField fx:id="newPriceField" promptText="Enter new price..." styleClass="text-field" HBox.hgrow="ALWAYS" />
                <Button fx:id="updatePriceButton" styleClass="btn-primary" text="Update Price" />
            </HBox>
        </VBox>
        
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Apply Percentage Change (%)" />
            <HBox spacing="10">
                <TextField fx:id="percentageField" promptText="e.g., 10 for +10%" styleClass="text-field" HBox.hgrow="ALWAYS" />
                <Button fx:id="applyPercentageButton" styleClass="btn-secondary" text="Apply to All" />
            </HBox>
        </VBox>
    </HBox>

    <!-- Main Content Area -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Routes Table -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="section-title" text="Routes Pricing" />
            <TableView fx:id="routesTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="routeIdColumn" text="Route ID" />
                    <TableColumn fx:id="sourceColumn" text="Source" />
                    <TableColumn fx:id="destinationColumn" text="Destination" />
                    <TableColumn fx:id="basePriceColumn" text="Base Price" />
                </columns>
            </TableView>
        </VBox>

        <!-- Price Details -->
        <VBox spacing="10" prefWidth="350">
            <Label styleClass="section-title" text="Pricing Details" />
            <TextArea fx:id="priceDetailsArea" editable="false" prefHeight="400" styleClass="details-area" />
        </VBox>
    </HBox>

</VBox>