<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ManagePricingController"
            stylesheets="@manage-pricing.css">
    
    <top>
        <VBox styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-content">
                <Button fx:id="backButton" text="Back to Dashboard" styleClass="back-button"/>
                <VBox spacing="2">
                    <Text fx:id="welcomeTitle" text="Pricing Management" styleClass="title"/>
                    <Text fx:id="userGreeting" styleClass="greeting"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="refreshButton" text="Refresh" styleClass="icon-button"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <BorderPane styleClass="main-content">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <left>
                <VBox spacing="25" styleClass="form-container">
                    <VBox spacing="15" styleClass="form-section">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Text text="Price Adjustment" styleClass="section-title"/>
                        </HBox>
                        
                        <VBox spacing="12">
                            <VBox spacing="5">
                                <Label text="New Price (PKR)" styleClass="form-label"/>
                                <TextField fx:id="newPriceField" promptText="Enter new price" styleClass="modern-field"/>
                                <Text text="For selected route" styleClass="field-hint"/>
                            </VBox>
                            
                            <VBox spacing="5">
                                <Label text="Percentage Change (%)" styleClass="form-label"/>
                                <TextField fx:id="percentageField" promptText="Enter percentage" styleClass="modern-field"/>
                                <Text text="Applies to all routes" styleClass="field-hint"/>
                            </VBox>
                        </VBox>
                    </VBox>
                    
                    <VBox spacing="10" styleClass="actions-section">
                        <Button fx:id="updatePriceButton" text="Update Price" styleClass="primary-button" maxWidth="Infinity"/>
                        <Button fx:id="applyPercentageButton" text="Apply Percentage" styleClass="secondary-button" maxWidth="Infinity"/>
                        <HBox spacing="10">
                            <Button fx:id="refreshButton" text="Refresh Data" styleClass="outline-button" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>
                    
                    <VBox spacing="12" styleClass="details-section">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Text text="Price Details" styleClass="section-title"/>
                        </HBox>
                        <TextArea fx:id="priceDetailsArea" editable="false" wrapText="true" 
                                 styleClass="details-area" prefHeight="180"/>
                    </VBox>
                </VBox>
            </left>
            
            <center>
                <VBox spacing="20" styleClass="table-section">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Text text="Route Prices" styleClass="section-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Text text="Select a route to update price" styleClass="hint-text"/>
                    </HBox>
                    
                    <TableView fx:id="routesTable" styleClass="modern-table" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="routeIdColumn" text="ROUTE ID" styleClass="table-column"/>
                            <TableColumn fx:id="sourceColumn" text="SOURCE" styleClass="table-column"/>
                            <TableColumn fx:id="destinationColumn" text="DESTINATION" styleClass="table-column"/>
                            <TableColumn fx:id="basePriceColumn" text="CURRENT PRICE" styleClass="table-column"/>
                        </columns>
                    </TableView>
                </VBox>
            </center>
        </BorderPane>
    </center>
</BorderPane>