<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #F5EFE7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ManagePoliciesController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-section">
        <VBox spacing="5">
            <Text fx:id="welcomeTitle" styleClass="dashboard-title" text="Manage Policies" />
            <Text fx:id="userGreeting" styleClass="dashboard-subtitle" text="Manage Policies - Admin" />
        </VBox>
        
        <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <Button fx:id="refreshButton" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" styleClass="btn-secondary" text="Back to Dashboard" />
        </HBox>
    </HBox>

    <!-- Input Form -->
    <HBox spacing="15" styleClass="form-container">
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Time Before Departure (hours)" />
            <TextField fx:id="timeField" promptText="Enter hours..." styleClass="text-field" />
        </VBox>
        
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Refund Amount (%)" />
            <TextField fx:id="refundField" promptText="Enter percentage..." styleClass="text-field" />
        </VBox>
        
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Description" />
            <TextArea fx:id="descriptionArea" promptText="Enter policy description..." styleClass="text-area" prefRowCount="3" />
        </VBox>
    </HBox>

    <!-- Action Buttons -->
    <HBox spacing="15" styleClass="form-container">
        <Button fx:id="addPolicyButton" styleClass="btn-primary" text="Add Policy" />
        <Button fx:id="updatePolicyButton" styleClass="btn-secondary" text="Update Policy" />
        <Button fx:id="deletePolicyButton" styleClass="btn-danger" text="Delete Policy" />
        <Button fx:id="clearButton" styleClass="btn-secondary" text="Clear" />
    </HBox>

    <!-- Main Content Area -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Policies Table -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label styleClass="section-title" text="Cancellation Policies" />
            <TableView fx:id="policyTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="policyIdColumn" text="Policy ID" />
                    <TableColumn fx:id="timeColumn" text="Time (hours)" />
                    <TableColumn fx:id="refundColumn" text="Refund (%)" />
                    <TableColumn fx:id="descriptionColumn" text="Description" />
                </columns>
            </TableView>
        </VBox>

        <!-- Policy Details -->
        <VBox spacing="10" prefWidth="350">
            <Label styleClass="section-title" text="Policy Details" />
            <TextArea fx:id="policyDetailsArea" editable="false" prefHeight="400" styleClass="details-area" />
        </VBox>
    </HBox>

</VBox>